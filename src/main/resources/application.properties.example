# Configurações do Servidor
server.port=8080

# Configurações do H2 Database
spring.datasource.url=jdbc:h2:file:./data/concursosdb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

# Configurações do JPA/Hibernate
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Console H2 - DESABILITAR EM PRODUÇÃO/TESTES EXTERNOS
spring.h2.console.enabled=false
spring.h2.console.path=/h2-console

# Configurações de Upload de Arquivos
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Diretório para salvar uploads
upload.path=uploads

# Autenticação HTTP Basic (Proteção contra acessos não autorizados)
# IMPORTANTE: Altere estas credenciais antes de expor a aplicação!
app.auth.enabled=true
app.auth.username=admin
app.auth.password=ALTERE_ESTA_SENHA

# Logging
logging.level.org.springframework.web=INFO
logging.level.com.concursos=DEBUG
